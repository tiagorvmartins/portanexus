{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",  // Ensure this is set to ESNext or CommonJS (if using CommonJS)
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
